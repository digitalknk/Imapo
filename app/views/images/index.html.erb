<% @images.each do |image| %>
<div class="span3">
<div class="image-group">
<div class="image image-wrapper">
  <%= link_to image_tag(image.image_url(:thumb), :class => 'img-polaroid'), image %>
  <span class="admin-links"><i class="icon-remove icon-white"></i><%= link_to 'Delete', image, method: :delete, data: { confirm: 'Are you sure?' } %></span>
</div>
</div>
  <span>Highlight text below and copy it:
    <br />
    <input type="text" class="span3" name="image_url" value="<%= image.image_url %>" readonly>
  </span>
  </div>
<% end %>
<br />
